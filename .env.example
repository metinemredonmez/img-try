# ===================
# VidCV Environment Variables
# Copy this file to .env and fill in your values
# ===================

# ===================
# Database
# ===================
DATABASE_URL=postgres://vidcv:vidcv123@localhost:5432/vidcv
POSTGRES_USER=vidcv
POSTGRES_PASSWORD=vidcv123
POSTGRES_DB=vidcv

# ===================
# Redis
# ===================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# ===================
# Elasticsearch
# ===================
ELASTICSEARCH_URL=http://localhost:9200

# ===================
# Kafka
# ===================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ===================
# MinIO (S3-compatible storage)
# ===================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=vidcv

# ===================
# Cloudflare R2 (Alternative S3)
# ===================
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=vidcv-videos

# ===================
# Django
# ===================
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ===================
# Frontend
# ===================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# ===================
# AI Services
# ===================
# Ollama (Local - No API key needed)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1
OLLAMA_EMBED_MODEL=nomic-embed-text

# LLM Provider Selection: ollama, openai, anthropic
LLM_PROVIDER=ollama

# OpenAI (Optional - only if using OpenAI)
OPENAI_API_KEY=

# Anthropic Claude (Optional)
ANTHROPIC_API_KEY=

# ===================
# Vector Database
# ===================
# Options: chroma, pgvector, pinecone
VECTOR_DB=pgvector
CHROMA_PERSIST_DIR=./data/chroma

# ===================
# TTS (Text-to-Speech)
# ===================
# Options: local, elevenlabs, openai, azure
TTS_PROVIDER=local

# ElevenLabs (Optional)
ELEVENLABS_API_KEY=

# ===================
# Video Avatar Generation
# ===================
# HeyGen
HEYGEN_API_KEY=

# D-ID
DID_API_KEY=

# ===================
# Supabase (Optional alternative to direct Postgres)
# ===================
SUPABASE_URL=
SUPABASE_KEY=

# ===================
# LangSmith (Monitoring - Optional)
# ===================
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=vidcv-ai
LANGSMITH_TRACING=true

# ===================
# Agora (Real-time video - Optional)
# ===================
AGORA_APP_ID=
AGORA_APP_CERTIFICATE=

# ===================
# Payment
# ===================
# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# Iyzico (Turkey)
IYZICO_API_KEY=
IYZICO_SECRET_KEY=

# ===================
# Email
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@vidcv.io
EMAILS_FROM_NAME=VidCV

# ===================
# Monitoring
# ===================
SENTRY_DSN=

# ===================
# Security
# ===================
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
REFRESH_TOKEN_EXPIRE_DAYS=30
